{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true, // xuất file .d.ts
		"emitDeclarationOnly": false, // vừa build js vừa xuất type
		"esModuleInterop": true,
		"moduleResolution": "node",
		"target": "ES2019",
		"module": "CommonJS",
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"]
}
